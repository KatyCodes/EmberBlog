{{#if addNewPost}}
<h1>New Post</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input id="title" value=title}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input id="date" type="date" value=date}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input id="author" value=author}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea id="content" value=content}}
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        {{input id="image" value=image}}
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        {{input id="category" value=category}}
      </div>
      <button class='btn' {{action 'savePost1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
